extend layout
block content
  +navigation
  .site-content
    form(action='/signup' method="post")
      img(src='logo.svg', alt='Photo Fight Application')
      if(error)
        span(style="text-align:center;display:block;margin:10px;")= error
      input(type='text', name='fullname', placeholder='Full Name')
      input(type='email', name='email', placeholder='Email')
      input(type='password', name='password', placeholder='Password')
      button.btn-submit(type='submit') Sign Up
